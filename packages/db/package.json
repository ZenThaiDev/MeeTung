{
  "name": "@mee-tung/db",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./src/client.ts"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "default": "./src/schema.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf .turbo node_modules",
    "dev": "tsc --watch",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "generate": "pnpm with-env prisma generate",
    "lint": "eslint",
    "push": "pnpm with-env prisma db push",
    "studio": "pnpm with-env prisma studio --config src/config.ts",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "prettier": "@mee-tung/prettier-config",
  "dependencies": {
    "@prisma/client": "^5.13.0",
    "@t3-oss/env-core": "^0.10.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@mee-tung/eslint-config": "workspace:*",
    "@mee-tung/prettier-config": "workspace:*",
    "@mee-tung/tsconfig": "workspace:*",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.4.0",
    "mysql2": "^3.9.7",
    "prettier": "^3.3.1",
    "prisma": "^5.13.0",
    "typescript": "^5.4.5"
  }
}
